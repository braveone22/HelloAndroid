<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:scrollbarSize="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#D61515"
            android:text="哈喽哈喽"
            android:textColor="#80FF00"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="200"
            tools:layout_editor_absoluteY="191dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="哈喽哈喽"
            android:textColor="#80FF00"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="191dp" />

        <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="你敢点击我吗？"
            android:textColor="#FF0000" />

        <Button
            android:id="@+id/btnOpenActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开第一个activity" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:inputType="numberPassword"
            android:textColorHint="#706970" />

        <Button
            android:id="@+id/btn_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="登录" />

        <Button
            android:id="@+id/btn_ShowImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="ShowImage"
            android:text="打开图片"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="学习RecyclerView"
            android:onClick="ShowRecyclerView"/>
        <Button
            android:id="@+id/btn_Get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GetExecute" />
        <Button
            android:id="@+id/btn_GetEnqueue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GetEnqueue" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按钮测试" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:ems="10"
            android:hint="shazi"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="#2C2929"
            android:textColorHint="#FF5722" />

        <Button
            android:id="@+id/button2"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:background="#E91E63"
            android:onClick="ShowImage"
            android:text="按钮"
            android:textColor="#80800931"
            android:textSize="30sp"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>